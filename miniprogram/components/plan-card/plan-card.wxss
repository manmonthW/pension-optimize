.plan-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.plan-card.recommended {
  border-color: #1890ff;
  background: linear-gradient(135deg, #ffffff 0%, #f0f9ff 100%);
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.2);
}

.plan-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.plan-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.plan-badge {
  background: linear-gradient(135deg, #1890ff 0%, #0066cc 100%);
  color: #fff;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.plan-pension {
  text-align: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.pension-amount {
  font-size: 56rpx;
  font-weight: 700;
  color: #1890ff;
}

.pension-unit {
  font-size: 28rpx;
  color: #999;
  margin-left: 8rpx;
}

.plan-details {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.detail-item {
  flex: 1;
  text-align: center;
}

.detail-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.detail-value {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.plan-summary {
  text-align: center;
  font-size: 26rpx;
  color: #666;
  padding: 16rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
}
