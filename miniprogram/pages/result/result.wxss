.header-card {
  background: linear-gradient(135deg, #1890ff 0%, #0066cc 100%);
  border-radius: 20rpx;
  padding: 50rpx 30rpx;
  margin: 20rpx;
  color: #fff;
  box-shadow: 0 12rpx 32rpx rgba(24, 144, 255, 0.3);
}

.best-plan-badge {
  text-align: center;
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
}

.best-plan-title {
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
}

.best-plan-pension {
  text-align: center;
  margin-bottom: 40rpx;
}

.amount {
  font-size: 80rpx;
  font-weight: 700;
}

.unit {
  font-size: 32rpx;
  margin-left: 12rpx;
  opacity: 0.9;
}

.best-plan-reasons {
  display: flex;
  justify-content: space-between;
  padding-top: 30rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.3);
}

.reason-item {
  flex: 1;
  text-align: center;
}

.reason-label {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 12rpx;
}

.reason-value {
  font-size: 28rpx;
  font-weight: 600;
}

.section {
  padding: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.plans-list {
  margin-top: 20rpx;
}

.actions {
  padding: 40rpx 20rpx;
}

.btn-secondary {
  background: #fff;
  color: #1890ff;
  border: 2rpx solid #1890ff;
  border-radius: 50rpx;
  padding: 28rpx 0;
  font-size: 32rpx;
  font-weight: 500;
}

.btn-secondary:active {
  opacity: 0.8;
}

/* 评选标准卡片 */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.standard-card {
  background: linear-gradient(135deg, #f6f9ff 0%, #ffffff 100%);
}

.standard-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.standard-list {
  margin-top: 20rpx;
}

.standard-item {
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  border-left: 4rpx solid #1890ff;
}

.standard-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.standard-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.standard-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.standard-weight {
  font-size: 24rpx;
  color: #1890ff;
  background: #e6f7ff;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.standard-detail {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
  padding-left: 44rpx;
}

.standard-formula {
  margin-top: 24rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #fff9e6 0%, #ffffff 100%);
  border-radius: 12rpx;
  border: 1rpx dashed #faad14;
}

.formula-title {
  font-size: 26rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.formula-content {
  font-size: 24rpx;
  color: #666;
  font-family: 'Courier New', monospace;
  line-height: 1.6;
}

/* 推荐理由卡片 */
.advantage-card {
  background: linear-gradient(135deg, #fff7e6 0%, #ffffff 100%);
  border: 2rpx solid #ffd591;
}

.advantage-subtitle {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.advantage-list {
  margin-top: 16rpx;
}

.advantage-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  margin-bottom: 16rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.advantage-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.advantage-icon.increase {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  color: #fff;
}

.advantage-icon.improve {
  background: linear-gradient(135deg, #1890ff 0%, #0050b3 100%);
  color: #fff;
}

.advantage-icon.save {
  background: linear-gradient(135deg, #fa8c16 0%, #d46b08 100%);
  color: #fff;
}

.advantage-icon.account {
  background: linear-gradient(135deg, #722ed1 0%, #531dab 100%);
  color: #fff;
}

.advantage-content {
  flex: 1;
}

.advantage-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.advantage-value {
  font-size: 32rpx;
  color: #1890ff;
  font-weight: 700;
  margin-bottom: 4rpx;
}

.advantage-percent {
  font-size: 24rpx;
  color: #52c41a;
  font-weight: 500;
}

.advantage-score {
  margin-top: 24rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #fff 0%, #f0f9ff 100%);
  border-radius: 12rpx;
  text-align: center;
  border: 2rpx solid #91d5ff;
}

.score-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 12rpx;
}

.score-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #1890ff;
}

.score-max {
  font-size: 28rpx;
  color: #999;
  margin-left: 4rpx;
}
