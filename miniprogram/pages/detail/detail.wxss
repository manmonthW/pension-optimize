.header {
  text-align: center;
  padding: 40rpx 20rpx 30rpx;
}

.plan-name {
  font-size: 48rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 20rpx;
}

.recommended-badge {
  display: inline-block;
  background: linear-gradient(135deg, #1890ff 0%, #0066cc 100%);
  color: #fff;
  padding: 8rpx 30rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.info-item {
  text-align: center;
  padding: 24rpx;
  background: #f7f7f7;
  border-radius: 12rpx;
}

.info-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.info-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.pension-breakdown {
  padding: 20rpx 0;
}

.breakdown-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
}

.breakdown-label {
  font-size: 28rpx;
  color: #666;
}

.breakdown-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.breakdown-value.primary {
  color: #1890ff;
}

.breakdown-value.highlight {
  font-size: 42rpx;
  color: #ff4d4f;
}

.breakdown-plus {
  text-align: center;
  font-size: 36rpx;
  color: #999;
  padding: 12rpx 0;
}

.breakdown-divider {
  height: 1rpx;
  background: #e8e8e8;
  margin: 20rpx 0;
}

.breakdown-item.total {
  padding-top: 30rpx;
}

.benefit-grid {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.benefit-item {
  flex: 1;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, #f0f9ff 0%, #e6f7ff 100%);
  border-radius: 12rpx;
  text-align: center;
  border: 1rpx solid #d9f0ff;
}

.benefit-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.benefit-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #1890ff;
  margin-bottom: 8rpx;
}

.benefit-hint {
  font-size: 22rpx;
  color: #999;
}

.benefit-summary {
  padding: 24rpx;
  background: #fffbe6;
  border-radius: 12rpx;
  border-left: 4rpx solid #faad14;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.actions {
  padding: 40rpx 20rpx;
}

.btn-secondary {
  background: #fff;
  color: #1890ff;
  border: 2rpx solid #1890ff;
  border-radius: 50rpx;
  padding: 28rpx 0;
  font-size: 32rpx;
  font-weight: 500;
}

.btn-secondary:active {
  opacity: 0.8;
}
